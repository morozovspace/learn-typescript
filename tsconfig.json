{
    "compilerOptions": {
        "outDir": "dist/js",
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "allowJs": false,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "exclude": [
        "node_modules", 
        "**/*.spec.ts", 
    ],
    "include": ["**/*.ts"],
  }